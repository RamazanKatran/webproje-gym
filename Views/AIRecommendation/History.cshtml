@model List<WebProjeGym.Models.AIRecommendation>

@{
    ViewData["Title"] = "Geçmiş Önerilerim";
}

<div class="page-header">
    <h1><i class="bi bi-clock-history"></i> Geçmiş Önerilerim</h1>
    <p class="text-muted">Daha önce aldığınız AI önerileri</p>
</div>

@if (Model == null || !Model.Any())
{
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Henüz öneri almadınız. <a asp-action="Index" class="alert-link">Yeni öneri almak için tıklayın</a>.
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var recommendation in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header @(recommendation.RecommendationType == WebProjeGym.Models.RecommendationType.Exercise ? "bg-primary" : "bg-success") text-white">
                        <h6 class="mb-0">
                            <i class="bi @(recommendation.RecommendationType == WebProjeGym.Models.RecommendationType.Exercise ? "bi-activity" : "bi-cup-hot")"></i>
                            @(recommendation.RecommendationType == WebProjeGym.Models.RecommendationType.Exercise ? "Egzersiz Programı" : "Beslenme Programı")
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-2">
                            <i class="bi bi-calendar"></i> @recommendation.CreatedAt.ToString("dd MMMM yyyy, HH:mm")
                        </p>
                        <div class="mb-3">
                            <small class="text-muted d-block"><strong>Boy:</strong> @recommendation.HeightCm cm</small>
                            <small class="text-muted d-block"><strong>Kilo:</strong> @recommendation.WeightKg kg</small>
                            <small class="text-muted d-block"><strong>Yaş:</strong> @recommendation.Age</small>
                            <small class="text-muted d-block"><strong>Vücut Tipi:</strong> @recommendation.BodyType</small>
                            <small class="text-muted d-block"><strong>Hedef:</strong> @recommendation.Goal</small>
                        </div>
                        <p class="card-text small text-truncate" style="max-height: 60px; overflow: hidden;">
                            @Html.Raw(Markdig.Markdown.ToHtml(recommendation.Content.Length > 200 ? recommendation.Content.Substring(0, 200) + "..." : recommendation.Content))
                        </p>
                    </div>
                    <div class="card-footer bg-light">
                        <a asp-action="ViewRecommendation" asp-route-id="@recommendation.Id" class="btn btn-sm btn-primary w-100">
                            <i class="bi bi-eye"></i> Detayları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Yeni Öneri Al
    </a>
</div>

