@model IEnumerable<WebProjeGym.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<h1 class="mt-3">Randevularım</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Randevu Al</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Antrenör</th>
            <th>Hizmet</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Süre</th>
            <th>Fiyat</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@(item.Trainer != null ? $"{item.Trainer.FirstName} {item.Trainer.LastName}" : "")</td>
            <td>@item.Service?.Name</td>
            <td>@item.StartDateTime.ToString("dd.MM.yyyy")</td>
            <td>@item.StartDateTime.ToString("HH:mm") - @item.EndDateTime.ToString("HH:mm")</td>
            <td>@item.DurationMinutes dk</td>
            <td>@item.Price.ToString("C")</td>
            <td>
                @if (item.Status == WebProjeGym.Models.AppointmentStatus.Pending)
                {
                    <span class="badge bg-warning">Beklemede</span>
                }
                else if (item.Status == WebProjeGym.Models.AppointmentStatus.Approved)
                {
                    <span class="badge bg-success">Onaylandı</span>
                }
                else
                {
                    <span class="badge bg-danger">İptal Edildi</span>
                }
            </td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                @if (item.Status == WebProjeGym.Models.AppointmentStatus.Pending)
                {
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">İptal Et</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz randevunuz bulunmamaktadır. <a asp-action="Create">Yeni randevu almak</a> için tıklayın.
    </div>
}

