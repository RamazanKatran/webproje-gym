@model WebProjeGym.Models.GymBranch

@{
    ViewData["Title"] = "Yeni Salon";
}

<h1 class="mt-3">Yeni Spor Salonu</h1>

<form asp-action="Create" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="OpeningTime" class="form-label"></label>
            <input asp-for="OpeningTime" type="time" class="form-control" value="08:00" />
            <span asp-validation-for="OpeningTime" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="ClosingTime" class="form-label"></label>
            <input asp-for="ClosingTime" type="time" class="form-control" value="22:00" />
            <span asp-validation-for="ClosingTime" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Listeye DÃ¶n</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


