@model WebProjeGym.Models.GymBranch

@{
    ViewData["Title"] = "Salon Sil";
}

<div class="page-header">
    <h1><i class="bi bi-trash"></i> Spor Salonu Sil</h1>
</div>

<div class="form-card">
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> <strong>Uyarı:</strong> Bu salonu silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
    </div>

    <h4 class="mb-4"><i class="bi bi-tag"></i> @Model.Name</h4>
    
    <div class="row mb-3">
        <div class="col-md-6">
            <strong><i class="bi bi-geo-alt"></i> Adres:</strong>
            <p class="text-muted">@(Model.Address ?? "-")</p>
        </div>
        <div class="col-md-6">
            <strong><i class="bi bi-clock"></i> Çalışma Saatleri:</strong>
            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.OpeningTime) && !string.IsNullOrEmpty(Model.ClosingTime))
                {
                    <span class="badge bg-info">@Model.OpeningTime - @Model.ClosingTime</span>
                }
                else
                {
                    <span>-</span>
                }
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Vazgeç
            </a>
        </div>
    </form>
</div>


