@model WebProjeGym.Models.GymBranch

@{
    ViewData["Title"] = "Salon Detay";
}

<h1 class="mt-3">Spor Salonu Detayı</h1>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">
            <strong>Adres:</strong> @Model.Address<br />
            <strong>Çalışma Saatleri:</strong> @Model.OpeningTime - @Model.ClosingTime
        </p>
        <p class="card-text">
            <strong>Açıklama:</strong><br />
            @Model.Description
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>


