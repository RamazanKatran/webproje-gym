@model WebProjeGym.Models.GymBranch

@{
    ViewData["Title"] = "Salon Detay";
}

<div class="page-header">
    <h1><i class="bi bi-building"></i> Spor Salonu Detayı</h1>
</div>

<div class="form-card">
    <h4 class="mb-4"><i class="bi bi-tag"></i> @Model.Name</h4>
    
    <div class="row mb-3">
        <div class="col-md-6">
            <strong><i class="bi bi-geo-alt"></i> Adres:</strong>
            <p class="text-muted">@(Model.Address ?? "-")</p>
        </div>
        <div class="col-md-6">
            <strong><i class="bi bi-clock"></i> Çalışma Saatleri:</strong>
            <p class="text-muted">
                @if (!string.IsNullOrEmpty(Model.OpeningTime) && !string.IsNullOrEmpty(Model.ClosingTime))
                {
                    <span class="badge bg-info">@Model.OpeningTime - @Model.ClosingTime</span>
                }
                else
                {
                    <span>-</span>
                }
            </p>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="mb-3">
            <strong><i class="bi bi-card-text"></i> Açıklama:</strong>
            <p class="text-muted">@Model.Description</p>
        </div>
    }

    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>


