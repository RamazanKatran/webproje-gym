@model WebProjeGym.Models.GymBranch

@{
    ViewData["Title"] = "Salon Düzenle";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square"></i> Spor Salonu Düzenle</h1>
</div>

<div class="form-card">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">
                <i class="bi bi-tag"></i> Ad <span class="text-danger">*</span>
            </label>
            <input asp-for="Name" class="form-control" placeholder="Spor salonu adını girin" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">
                <i class="bi bi-geo-alt"></i> Adres
            </label>
            <input asp-for="Address" class="form-control" placeholder="Spor salonu adresini girin" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">
                <i class="bi bi-card-text"></i> Açıklama
            </label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Spor salonu hakkında açıklama"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="OpeningTime" class="form-label">
                    <i class="bi bi-clock"></i> Açılış Saati
                </label>
                <input asp-for="OpeningTime" type="time" class="form-control" />
                <span asp-validation-for="OpeningTime" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="ClosingTime" class="form-label">
                    <i class="bi bi-clock-history"></i> Kapanış Saati
                </label>
                <input asp-for="ClosingTime" type="time" class="form-control" />
                <span asp-validation-for="ClosingTime" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions" style="display: flex !important; visibility: visible !important; opacity: 1 !important; margin-top: 2rem; padding-top: 1.5rem; border-top: 2px solid #e5e7eb;">
            <button type="submit" class="btn btn-primary" style="display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                <i class="bi bi-check-circle"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </form>
</div>

<div style="height: 100px;"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


