@model IEnumerable<WebProjeGym.Models.GymBranch>

@{
    ViewData["Title"] = "Spor Salonları";
}

<div class="index-header">
    <h1><i class="bi bi-building"></i> Spor Salonları</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Yeni Salon Ekle
    </a>
</div>

<div class="card table-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-tag"></i> Ad</th>
                        <th><i class="bi bi-geo-alt"></i> Adres</th>
                        <th><i class="bi bi-clock"></i> Çalışma Saatleri</th>
                        <th class="text-end"><i class="bi bi-gear"></i> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@(item.Address ?? "-")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.OpeningTime) && !string.IsNullOrEmpty(item.ClosingTime))
                                {
                                    <span class="badge bg-info">@item.OpeningTime - @item.ClosingTime</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="table-actions">
                                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div style="height: 100px;"></div>


