@using Microsoft.AspNetCore.Identity
@using WebProjeGym.Models
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section text-center fade-in">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">
            <i class="bi bi-activity"></i> FitZone'a Hoş Geldiniz
        </h1>
        <p class="lead mb-4">Profesyonel antrenörlerle hedeflerinize ulaşın. Modern spor salonu yönetim sistemi ile randevularınızı kolayca yönetin.</p>
        @if (!SignInManager.IsSignedIn(User))
        {
            <div class="mt-4">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg me-3">
                    <i class="bi bi-person-plus"></i> Hemen Kayıt Ol
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                </a>
            </div>
        }
    </div>
</div>

<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-person-badge" style="font-size: 3rem; color: var(--primary-color);"></i>
                    </div>
                    <h5 class="card-title fw-bold">Profesyonel Antrenörler</h5>
                    <p class="card-text">Uzman antrenörlerimizle kişiselleştirilmiş antrenman programları oluşturun.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-calendar-check" style="font-size: 3rem; color: var(--success-color);"></i>
                    </div>
                    <h5 class="card-title fw-bold">Kolay Randevu Sistemi</h5>
                    <p class="card-text">Online randevu alın, antrenörlerinizin müsaitlik saatlerini görüntüleyin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-graph-up-arrow" style="font-size: 3rem; color: var(--secondary-color);"></i>
                    </div>
                    <h5 class="card-title fw-bold">Hedeflerinize Ulaşın</h5>
                    <p class="card-text">Kişisel hedeflerinize uygun egzersiz ve diyet planları ile ilerlemenizi takip edin.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-speedometer2"></i> Hızlı Erişim</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="col-md-3">
                                    <a asp-controller="GymBranches" asp-action="Index" class="btn btn-primary w-100">
                                        <i class="bi bi-building"></i><br />Spor Salonları
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="Services" asp-action="Index" class="btn btn-success w-100">
                                        <i class="bi bi-list-ul"></i><br />Hizmetler
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="Trainers" asp-action="Index" class="btn btn-secondary w-100">
                                        <i class="bi bi-person-badge"></i><br />Antrenörler
                                    </a>
                                </div>
                            }
                            else if (User.IsInRole("Member"))
                            {
                                <div class="col-md-3">
                                    <a asp-controller="Appointments" asp-action="Create" class="btn btn-primary w-100">
                                        <i class="bi bi-plus-circle"></i><br />Yeni Randevu Al
                                    </a>
                                </div>
                                <div class="col-md-3">
                                    <a asp-controller="Appointments" asp-action="Index" class="btn btn-success w-100">
                                        <i class="bi bi-calendar-check"></i><br />Randevularım
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a asp-controller="MemberProfiles" asp-action="Index" class="btn btn-secondary w-100">
                                        <i class="bi bi-person-circle"></i><br />Profilim
                                    </a>
                                </div>
                            }
                            else if (User.IsInRole("Trainer"))
                            {
                                <div class="col-md-12">
                                    <a asp-controller="TrainerAppointments" asp-action="Index" class="btn btn-primary w-100">
                                        <i class="bi bi-calendar-check"></i><br />Randevularımı Görüntüle
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
