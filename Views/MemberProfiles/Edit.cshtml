@model WebProjeGym.Models.MemberProfile

@{
    ViewData["Title"] = "Profili Düzenle";
}

<h1 class="mt-3">Profili Düzenle</h1>

<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ApplicationUserId" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="HeightCm" class="form-label"></label>
            <input asp-for="HeightCm" class="form-control" type="number" min="100" max="250" />
            <span asp-validation-for="HeightCm" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="WeightKg" class="form-label"></label>
            <input asp-for="WeightKg" class="form-control" type="number" step="0.1" min="30" max="250" />
            <span asp-validation-for="WeightKg" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Goal" class="form-label"></label>
        <input asp-for="Goal" class="form-control" placeholder="Örn: Kilo verme, Kas geliştirme, Genel fitness" />
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

