@model WebProjeGym.Models.MemberProfile

@{
    ViewData["Title"] = "Profili Düzenle";
}

<h1 class="mt-3">Profili Düzenle</h1>

<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ApplicationUserId" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label">
                <i class="bi bi-person"></i> Ad
            </label>
            <input asp-for="FirstName" class="form-control" placeholder="Adınızı girin" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label">
                <i class="bi bi-person"></i> Soyad
            </label>
            <input asp-for="LastName" class="form-control" placeholder="Soyadınızı girin" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="HeightCm" class="form-label">
                <i class="bi bi-rulers"></i> Boy (cm)
            </label>
            <input asp-for="HeightCm" class="form-control" type="number" min="100" max="250" placeholder="Örn: 175" />
            <span asp-validation-for="HeightCm" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="WeightKg" class="form-label">
                <i class="bi bi-speedometer"></i> Kilo (kg)
            </label>
            <input asp-for="WeightKg" class="form-control" type="number" step="0.1" min="30" max="250" placeholder="Örn: 70.5" />
            <span asp-validation-for="WeightKg" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Goal" class="form-label">
            <i class="bi bi-bullseye"></i> Hedef
        </label>
        <input asp-for="Goal" class="form-control" placeholder="Örn: Kilo verme, Kas geliştirme, Genel fitness" />
        <span asp-validation-for="Goal" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

