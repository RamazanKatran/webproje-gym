@model WebProjeGym.Models.MemberProfile

@{
    ViewData["Title"] = "Profilim";
}

<h1 class="mt-3">Profilim</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">Kişisel Bilgiler</h5>
        <p class="card-text">
            <strong>E-posta:</strong> @Model.ApplicationUser?.Email<br />
            @if (Model.HeightCm.HasValue)
            {
                <text><strong>Boy:</strong> @Model.HeightCm cm<br /></text>
            }
            @if (Model.WeightKg.HasValue)
            {
                <text><strong>Kilo:</strong> @Model.WeightKg kg<br /></text>
            }
            @if (!string.IsNullOrEmpty(Model.Goal))
            {
                <strong>Hedef:</strong> @Model.Goal<br />
            }
        </p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Profili Düzenle</a>
    </div>
</div>

@if (!Model.HeightCm.HasValue || !Model.WeightKg.HasValue || string.IsNullOrEmpty(Model.Goal))
{
    <div class="alert alert-warning mt-3">
        <strong>Bilgilendirme:</strong> Profil bilgilerinizi tamamlamanız randevu alabilmeniz için gereklidir.
    </div>
}
else
{
    <div class="alert alert-success mt-3">
        <strong>Harika!</strong> Profil bilgileriniz tamamlandı. Artık randevu alabilirsiniz.
        <a asp-controller="Appointments" asp-action="Create" class="btn btn-success btn-sm ms-2">Randevu Al</a>
    </div>
}

