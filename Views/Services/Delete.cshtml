@model WebProjeGym.Models.Service

@{
    ViewData["Title"] = "Hizmet Sil";
}

<h1 class="mt-3">Hizmet Sil</h1>

<h3>Bu hizmeti silmek istediğinize emin misiniz?</h3>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">
            <strong>Salon:</strong> @Model.GymBranch?.Name<br />
            <strong>Süre:</strong> @Model.DurationMinutes dakika<br />
            <strong>Ücret:</strong> @Model.Price.ToString("C")
        </p>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>


