@model WebProjeGym.Models.Service

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="page-header">
    <h1><i class="bi bi-trash"></i> Hizmet Sil</h1>
</div>

<div class="form-card">
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> <strong>Uyarı:</strong> Bu hizmeti silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
    </div>

    <h4 class="mb-4"><i class="bi bi-tag"></i> @Model.Name</h4>
    
    <div class="row mb-3">
        <div class="col-md-4">
            <strong><i class="bi bi-building"></i> Salon:</strong>
            <p class="text-muted">@(Model.GymBranch?.Name ?? "-")</p>
        </div>
        <div class="col-md-4">
            <strong><i class="bi bi-clock"></i> Süre:</strong>
            <p class="text-muted"><span class="badge bg-info">@Model.DurationMinutes dakika</span></p>
        </div>
        <div class="col-md-4">
            <strong><i class="bi bi-currency-dollar"></i> Ücret:</strong>
            <p class="text-muted"><strong class="text-success">@Model.Price.ToString("N2") ₺</strong></p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Vazgeç
            </a>
        </div>
    </form>
</div>


