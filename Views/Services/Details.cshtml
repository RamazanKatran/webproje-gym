@model WebProjeGym.Models.Service

@{
    ViewData["Title"] = "Hizmet Detay";
}

<div class="page-header">
    <h1><i class="bi bi-list-ul"></i> Hizmet Detayı</h1>
</div>

<div class="form-card">
    <h4 class="mb-4"><i class="bi bi-tag"></i> @Model.Name</h4>
    
    <div class="row mb-3">
        <div class="col-md-4">
            <strong><i class="bi bi-building"></i> Salon:</strong>
            <p class="text-muted">@(Model.GymBranch?.Name ?? "-")</p>
        </div>
        <div class="col-md-4">
            <strong><i class="bi bi-clock"></i> Süre:</strong>
            <p class="text-muted"><span class="badge bg-info">@Model.DurationMinutes dakika</span></p>
        </div>
        <div class="col-md-4">
            <strong><i class="bi bi-currency-dollar"></i> Ücret:</strong>
            <p class="text-muted"><strong class="text-success">@Model.Price.ToString("N2") ₺</strong></p>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="mb-3">
            <strong><i class="bi bi-card-text"></i> Açıklama:</strong>
            <p class="text-muted">@Model.Description</p>
        </div>
    }

    <div class="form-actions">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Listeye Dön
        </a>
    </div>
</div>


