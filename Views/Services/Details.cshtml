@model WebProjeGym.Models.Service

@{
    ViewData["Title"] = "Hizmet Detay";
}

<h1 class="mt-3">Hizmet Detayı</h1>

<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text">
            <strong>Salon:</strong> @Model.GymBranch?.Name<br />
            <strong>Süre:</strong> @Model.DurationMinutes dakika<br />
            <strong>Ücret:</strong> @Model.Price.ToString("C")
        </p>
        <p class="card-text">
            <strong>Açıklama:</strong><br />
            @Model.Description
        </p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>


