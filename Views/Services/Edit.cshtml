@model WebProjeGym.Models.Service

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square"></i> Hizmet Düzenle</h1>
</div>

<div class="form-card">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">
                <i class="bi bi-tag"></i> Ad <span class="text-danger">*</span>
            </label>
            <input asp-for="Name" class="form-control" placeholder="Hizmet adını girin" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label asp-for="GymBranchId" class="form-label">
                    <i class="bi bi-building"></i> Salon <span class="text-danger">*</span>
                </label>
                <select asp-for="GymBranchId" class="form-select" asp-items="ViewBag.GymBranchId">
                    <option value="">Salon Seçin</option>
                </select>
                <span asp-validation-for="GymBranchId" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="DurationMinutes" class="form-label">
                    <i class="bi bi-clock"></i> Süre (Dakika) <span class="text-danger">*</span>
                </label>
                <input asp-for="DurationMinutes" class="form-control" type="number" min="10" max="300" />
                <span asp-validation-for="DurationMinutes" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <label asp-for="Price" class="form-label">
                    <i class="bi bi-currency-dollar"></i> Ücret (₺) <span class="text-danger">*</span>
                </label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">
                <i class="bi bi-card-text"></i> Açıklama
            </label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Hizmet hakkında açıklama"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-actions" style="display: flex !important; visibility: visible !important; opacity: 1 !important; margin-top: 2rem; padding-top: 1.5rem; border-top: 2px solid #e5e7eb;">
            <button type="submit" class="btn btn-primary" style="display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                <i class="bi bi-check-circle"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="display: inline-flex !important; visibility: visible !important; opacity: 1 !important;">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </form>
</div>

<div style="height: 100px;"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


