@model IEnumerable<WebProjeGym.Models.Service>

@{
    ViewData["Title"] = "Hizmetler";
}

<div class="index-header">
    <h1><i class="bi bi-list-ul"></i> Hizmetler</h1>
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
    </a>
</div>

<div class="card table-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-tag"></i> Ad</th>
                        <th><i class="bi bi-building"></i> Salon</th>
                        <th><i class="bi bi-clock"></i> Süre (dk)</th>
                        <th><i class="bi bi-currency-dollar"></i> Ücret</th>
                        <th class="text-end"><i class="bi bi-gear"></i> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Name</strong></td>
                            <td>@(item.GymBranch?.Name ?? "-")</td>
                            <td><span class="badge bg-info">@item.DurationMinutes dk</span></td>
                            <td><strong class="text-success">@item.Price.ToString("N2") ₺</strong></td>
                            <td class="text-end">
                                <div class="table-actions">
                                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="bi bi-eye"></i> Detay
                                    </a>
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div style="height: 100px;"></div>


