@model IEnumerable<WebProjeGym.Models.TrainerAvailability>

@{
    ViewData["Title"] = "Müsaitlik Saatleri";
}

<div class="index-header">
    <h1><i class="bi bi-clock"></i> Müsaitlik Saatleri</h1>
    <div>
        <a class="btn btn-primary" asp-action="Create" asp-route-trainerId="@ViewBag.TrainerId">
            <i class="bi bi-plus-circle"></i> Yeni Müsaitlik Ekle
        </a>
        @if (ViewBag.TrainerId != null)
        {
            <a class="btn btn-secondary" asp-controller="Trainers" asp-action="Details" asp-route-id="@ViewBag.TrainerId">
                <i class="bi bi-arrow-left"></i> Antrenöre Dön
            </a>
        }
    </div>
</div>

@if (ViewBag.TrainerName != null)
{
    <div class="alert alert-info">
        <i class="bi bi-person-badge"></i> Antrenör: <strong>@ViewBag.TrainerName</strong>
    </div>
}

<div class="card table-card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-person-badge"></i> Antrenör</th>
                        <th><i class="bi bi-calendar"></i> Gün</th>
                        <th><i class="bi bi-clock"></i> Başlangıç</th>
                        <th><i class="bi bi-clock-history"></i> Bitiş</th>
                        <th class="text-end"><i class="bi bi-gear"></i> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@(item.Trainer != null ? $"{item.Trainer.FirstName} {item.Trainer.LastName}" : "-")</strong></td>
                            <td><span class="badge bg-primary">@DayOfWeekHelper.GetTurkishName(item.DayOfWeek)</span></td>
                            <td><span class="badge bg-info">@item.StartTime.ToString(@"hh\:mm")</span></td>
                            <td><span class="badge bg-info">@item.EndTime.ToString(@"hh\:mm")</span></td>
                            <td class="text-end">
                                <div class="table-actions">
                                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div style="height: 100px;"></div>

