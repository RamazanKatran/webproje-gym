@model WebProjeGym.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<h1 class="mt-3">Antrenör Düzenle</h1>

<form asp-action="Edit" method="post" class="mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="GymBranchId" class="form-label"></label>
        <select asp-for="GymBranchId" class="form-select" asp-items="ViewBag.GymBranchId"></select>
        <span asp-validation-for="GymBranchId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Specialization" class="form-label"></label>
        <input asp-for="Specialization" class="form-control" />
        <span asp-validation-for="Specialization" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <hr class="my-4" />
    <h5>Verdiği Hizmetler</h5>
    <div class="mb-3 border p-3" id="servicesContainer" style="max-height: 200px; overflow-y: auto;">
        <p class="text-muted">Yükleniyor...</p>
    </div>

    <hr class="my-4" />
    <div class="mb-3">
        <h5>Müsaitlik Saatleri</h5>
        <div id="gymHoursInfo" class="alert alert-info" style="display:none;">
            <small><strong>Salon Çalışma Saatleri:</strong> <span id="gymHoursText"></span></small>
        </div>
        <button type="button" class="btn btn-sm btn-outline-primary mb-2" onclick="addAvailability()">+ Müsaitlik Ekle</button>
        <div id="availabilitiesContainer">
            @if (Model.TrainerAvailabilities != null && Model.TrainerAvailabilities.Any())
            {
                @foreach (var avail in Model.TrainerAvailabilities)
                {
                    var index = Model.TrainerAvailabilities.ToList().IndexOf(avail);
                    <div class="row mb-2 availability-row" data-index="@index">
                        <div class="col-md-3">
                            <select name="availabilities[@index].DayOfWeek" class="form-select availability-day">
                                <option value="">Gün Seçin</option>
                                @foreach (var day in Enum.GetValues(typeof(DayOfWeek)).Cast<DayOfWeek>())
                                {
                                    <option value="@((int)day)" selected="@(avail.DayOfWeek == day)">@DayOfWeekHelper.GetTurkishName(day)</option>
                                }
                            </select>
                        </div>
                    <div class="col-md-3">
                        <input type="time" name="availabilities[@index].StartTime" class="form-control availability-start" value="@avail.StartTime.ToString(@"hh\:mm")" onchange="validateAvailabilityRow(@index)" />
                        <small class="text-danger availability-error-@index" style="display:none;"></small>
                    </div>
                    <div class="col-md-3">
                        <input type="time" name="availabilities[@index].EndTime" class="form-control availability-end" value="@avail.EndTime.ToString(@"hh\:mm")" onchange="validateAvailabilityRow(@index)" />
                    </div>
                        <div class="col-md-3">
                            <button type="button" class="btn btn-sm btn-danger" onclick="removeAvailability(@index)">Sil</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary" onclick="return validateForm()">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        let availabilityIndex = @(Model.TrainerAvailabilities?.Count ?? 0);
        const dayOfWeekOptions = [
            { value: 0, text: "Pazar" },
            { value: 1, text: "Pazartesi" },
            { value: 2, text: "Salı" },
            { value: 3, text: "Çarşamba" },
            { value: 4, text: "Perşembe" },
            { value: 5, text: "Cuma" },
            { value: 6, text: "Cumartesi" }
        ];
        const selectedServices = @Html.Raw(Json.Serialize(ViewBag.SelectedServices as List<int> ?? new List<int>()));

        let gymBranchHours = { openingTime: "", closingTime: "" };

        // Salon değiştiğinde hizmetleri ve saatleri yükle
        document.getElementById('GymBranchId').addEventListener('change', function() {
            loadServices(this.value);
            loadGymBranchHours(this.value);
        });

        function loadServices(gymBranchId) {
            if (!gymBranchId) {
                document.getElementById('servicesContainer').innerHTML = '<p class="text-muted">Önce salon seçin.</p>';
                return;
            }

            fetch(`/Trainers/GetServicesByGymBranch?gymBranchId=${gymBranchId}`)
                .then(response => response.json())
                .then(services => {
                    const container = document.getElementById('servicesContainer');
                    if (services.length === 0) {
                        container.innerHTML = '<p class="text-muted">Bu salonda henüz hizmet tanımlanmamış.</p>';
                        return;
                    }

                    let html = '';
                    services.forEach(service => {
                        const isChecked = selectedServices.includes(service.id) ? 'checked' : '';
                        html += `
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" name="selectedServices" value="${service.id}" id="service_${service.id}" ${isChecked} />
                                <label class="form-check-label" for="service_${service.id}">
                                    <strong>${service.name}</strong> - ${service.durationMinutes} dk - ${service.price} ₺
                                </label>
                            </div>
                        `;
                    });
                    container.innerHTML = html;
                });
        }

        function loadGymBranchHours(gymBranchId) {
            if (!gymBranchId) {
                gymBranchHours = { openingTime: "", closingTime: "" };
                document.getElementById('gymHoursInfo').style.display = 'none';
                return;
            }

            fetch(`/Trainers/GetGymBranchHours?gymBranchId=${gymBranchId}`)
                .then(response => response.json())
                .then(hours => {
                    gymBranchHours = hours;
                    if (hours.openingTime && hours.closingTime) {
                        document.getElementById('gymHoursText').textContent = `${hours.openingTime} - ${hours.closingTime}`;
                        document.getElementById('gymHoursInfo').style.display = 'block';
                    } else {
                        document.getElementById('gymHoursInfo').style.display = 'none';
                    }
                    // Mevcut müsaitlik saatlerini de kontrol et
                    document.querySelectorAll('.availability-row').forEach(row => {
                        const index = row.getAttribute('data-index');
                        validateAvailabilityRow(parseInt(index));
                    });
                });
        }

        function validateAvailabilityTime(startTime, endTime) {
            if (!gymBranchHours.openingTime || !gymBranchHours.closingTime) {
                return { valid: true, message: "" };
            }

            const opening = gymBranchHours.openingTime.substring(0, 5);
            const closing = gymBranchHours.closingTime.substring(0, 5);
            
            if (startTime < opening) {
                return { 
                    valid: false, 
                    message: `Spor salonu ${opening} saatinde açılıyor. Başlangıç saati ${opening} veya sonrası olmalıdır.` 
                };
            }
            
            if (endTime > closing) {
                return { 
                    valid: false, 
                    message: `Spor salonu ${closing} saatinde kapanıyor. Bitiş saati ${closing} veya öncesi olmalıdır.` 
                };
            }

            if (startTime >= endTime) {
                return { 
                    valid: false, 
                    message: "Başlangıç saati bitiş saatinden önce olmalıdır." 
                };
            }

            return { valid: true, message: "" };
        }

        function addAvailability() {
            const container = document.getElementById('availabilitiesContainer');
            const index = availabilityIndex++;
            const html = `
                <div class="row mb-2 availability-row" data-index="${index}">
                    <div class="col-md-3">
                        <select name="availabilities[${index}].DayOfWeek" class="form-select availability-day">
                            <option value="">Gün Seçin</option>
                            ${dayOfWeekOptions.map(d => `<option value="${d.value}">${d.text}</option>`).join('')}
                        </select>
                    </div>
                    <div class="col-md-3">
                        <input type="time" name="availabilities[${index}].StartTime" class="form-control availability-start" onchange="validateAvailabilityRow(${index})" />
                        <small class="text-danger availability-error-${index}" style="display:none;"></small>
                    </div>
                    <div class="col-md-3">
                        <input type="time" name="availabilities[${index}].EndTime" class="form-control availability-end" onchange="validateAvailabilityRow(${index})" />
                    </div>
                    <div class="col-md-3">
                        <button type="button" class="btn btn-sm btn-danger" onclick="removeAvailability(${index})">Sil</button>
                    </div>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', html);
        }

        function validateAvailabilityRow(index) {
            const row = document.querySelector(`.availability-row[data-index="${index}"]`);
            if (!row) return;
            
            const startInput = row.querySelector('.availability-start');
            const endInput = row.querySelector('.availability-end');
            const errorElement = document.querySelector(`.availability-error-${index}`);

            if (!startInput || !endInput || !startInput.value || !endInput.value) {
                if (errorElement) errorElement.style.display = 'none';
                return;
            }

            const validation = validateAvailabilityTime(startInput.value, endInput.value);
            if (!validation.valid) {
                if (errorElement) {
                    errorElement.textContent = validation.message;
                    errorElement.style.display = 'block';
                }
                startInput.classList.add('is-invalid');
                endInput.classList.add('is-invalid');
            } else {
                if (errorElement) errorElement.style.display = 'none';
                startInput.classList.remove('is-invalid');
                endInput.classList.remove('is-invalid');
            }
        }

        function removeAvailability(index) {
            document.querySelector(`.availability-row[data-index="${index}"]`)?.remove();
        }

        function validateForm() {
            let isValid = true;
            document.querySelectorAll('.availability-row').forEach(row => {
                const index = parseInt(row.getAttribute('data-index'));
                const startInput = row.querySelector('.availability-start');
                const endInput = row.querySelector('.availability-end');
                
                if (startInput && endInput && startInput.value && endInput.value) {
                    const validation = validateAvailabilityTime(startInput.value, endInput.value);
                    if (!validation.valid) {
                        validateAvailabilityRow(index);
                        isValid = false;
                    }
                }
            });
            
            if (!isValid) {
                alert('Lütfen müsaitlik saatlerini salon çalışma saatlerine uygun şekilde düzenleyin.');
            }
            
            return isValid;
        }

        // Sayfa yüklendiğinde hizmetleri ve saatleri yükle
        window.addEventListener('DOMContentLoaded', function() {
            const gymBranchId = document.getElementById('GymBranchId').value;
            if (gymBranchId) {
                loadServices(gymBranchId);
                loadGymBranchHours(gymBranchId);
            }
        });
    </script>
}

